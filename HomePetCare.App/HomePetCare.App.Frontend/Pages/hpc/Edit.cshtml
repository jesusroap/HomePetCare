@page
@model HomePetCare.App.Frontend.Pages.EditModel
@{
    ViewData["Title"] = "Edición de la Mascota";
}

<section id="edit">
    <h1 class="wow fadeInUp intern">@ViewData["Title"]: @Model.mascota.Nombre</h1>
    
    <form method="post" class="wow fadeInUp">
        <input type="hidden" asp-for="mascota.Id"/>
        <div class="form-group">
            <label asp-for="mascota.Nombre"></label>
            <input asp-for="mascota.Nombre" class="form-control">
            <span class="text-danger" asp-validation-for="mascota.Nombre"></span>
        </div>
        <div class="form-group">
            <label asp-for="mascota.Temperatura"></label>
            <input asp-for="mascota.Temperatura" class="form-control">
            <span class="text-danger" asp-validation-for="mascota.Temperatura"></span>
        </div>
        <div class="form-group">
            <label asp-for="mascota.Peso"></label>
            <input asp-for="mascota.Peso" class="form-control">
            <span class="text-danger" asp-validation-for="mascota.Peso"></span>
        </div>
        <div class="form-group">
            <label asp-for="mascota.FrecuenciaRespiratoria"></label>
            <input asp-for="mascota.FrecuenciaRespiratoria" class="form-control">
            <span class="text-danger" asp-validation-for="mascota.FrecuenciaRespiratoria"></span>
        </div>
        <div class="form-group">
            <label asp-for="mascota.FrecuenciaCardiaca"></label>
            <input asp-for="mascota.FrecuenciaCardiaca" class="form-control">
            <span class="text-danger" asp-validation-for="mascota.FrecuenciaCardiaca"></span>
        </div>
        <div class="form-group">
            <label asp-for="mascota.EstadoAnimo"></label>
            <input asp-for="mascota.EstadoAnimo" class="form-control">
            <span class="text-danger" asp-validation-for="mascota.EstadoAnimo"></span>
        </div>
        
        <button type="submit" class="main-btn btn-hover border-btn intern">Grabar</button>
        <a asp-page="./Mascota" class="main-btn btn-hover border-btn intern">Cancelar</a>
    </form>
</section>

<script>
    document.querySelector("#mascotas").classList.add("active");
</script>

