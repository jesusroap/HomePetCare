@page
@model HomePetCare.App.Frontend.Pages.EditModel
@{
    ViewData["Title"] = "Edición de la Mascota";
}

<section id="edit" class="section">
    <div class="container">
        <h1 class="wow fadeInUp intern">@ViewData["Title"]: @Model.mascota.Nombre</h1>
        
        <form method="post" class="wow fadeInUp">
            <input type="hidden" asp-for="mascota.Id"/>
            <div class="form-group">
                <label asp-for="mascota.Nombre"></label>
                <input asp-for="mascota.Nombre" class="form-control">
                <span class="text-danger" asp-validation-for="mascota.Nombre"></span>
            </div>
            <div class="form-group">
                <label asp-for="mascota.Temperatura"></label>
                <input asp-for="mascota.Temperatura" class="form-control">
                <span class="text-danger" asp-validation-for="mascota.Temperatura"></span>
            </div>
            
            <button type="submit" class="main-btn btn-hover border-btn intern">Grabar</button>
            <a asp-page="./Mascota" class="main-btn btn-hover border-btn intern">Cancelar</a>
        </form>
    </div>
</section>

<script>
    document.querySelector("#mascotas").classList.add("active");
</script>

